<header class="navbar navbar-fixed-top navbar-inverse"> <! navbar navbar-fixed-top navbar-inverse are css class in Bootstrap >
  <div class="container">                               <! container is a class in Bootstrap >
    <%= link_to "sample_app", root_path, id: "logo" %>  <! adds the CSS id: "logo" - an options hash >
    <nav>
      <! Section added to create the hamburger menue on mobile devices >
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed"
                data-toggle="collapse"
                data-target="#bs-example-navbar-collapse-1"
                aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      </div>
      <! end hamburger code >
      <! navigation bar for standard/non-mobile size screens >
      <ul class="nav navbar-nav navbar-right collapse navbar-collapse"
          id="bs-example-navbar-collapse-1"><ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>     <! link_to is a Rails Helper, while '#' is a stub URL >
        <li><%= link_to "Help",   help_path %></li>
        <! log in menue changes based on if someone is logged in or not >
        <% if logged_in? %>
          <! Links for logged-in users>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li><%= link_to "Settings",edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <! Links for non-logged-in-users >
          <li><%= link_to "Log in",  login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>